@model NewTypeViewModel
@{ViewData["Title"] = "Добавить новый вид животного";
    Layout = "_LoginLayout";
}
<form asp-action="AddType" method="post">
    <div class="card-body">
        <!--div asp-validation-summary="All" class="text-danger"></!div-->


        <div class="form-group bmd-form-group">
            <label asp-for="Type" class="bmd-label-floating"></label>
            <input asp-for="Type" class="form-control" placeholder="Название нового вида животного">
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        
    </div>

    <div class="card-footer justify-content-center">
        <button type="submit" class="btn btn-primary btn-fill btn-lg">Сохранить изменения</button>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationPost")
}